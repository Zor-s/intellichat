<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>IntelliChat - Conversation</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="intellichat.css">
    
  </head>
  <body>
    <div class="chat-container">
      <!-- Header -->
      <div class="chat-header">
        <div class="d-flex justify-content-between align-items-center">
          <div class="brand-logo">IntelliChat</div>
          <div class="status-indicator">
            <span class="status-dot"></span>
            <span>AI Ready</span>
          </div>
        </div>
      </div>

      <!-- Main Chat Area -->
      <div class="chat-main">
        <!-- Welcome Section -->
        <div class="welcome-section" id="welcomeSection">
          <h1 class="welcome-title">
            Welcome, <span class="welcome-username" id="username"><%= username %></span>
          </h1>
          <h2 class="welcome-subtitle">How Can We Assist You Today?</h2>
          <p class="welcome-description">
            IntelliChat can provide round-the-clock service, ensuring that
            users can get assistance or information at any time without the
            need for human staff to be always available.
          </p>
        </div>

        <!-- Chat Messages -->
        <div id="chatArea"></div>
      </div>

      <!-- Input Section -->
      <div class="chat-input-section">
        <form id="chatForm" class="input-container">
          <div class="input-wrapper">
            <textarea
              id="userMessage"
              name="user_prompt"
              placeholder="Type your message here..."
              rows="1"
            ></textarea>
          </div>
          <button type="submit" class="send-button">
            <i class="bi bi-send-fill"></i>
          </button>
        </form>
      </div>
    </div>

    <script>
      const chatContainer = document.getElementById("chatArea");
      const messageForm = document.getElementById("chatForm");
      const messageInput = document.getElementById("userMessage");
      const welcomeSection = document.getElementById("welcomeSection");

      // Initialize chat history
      let chatHistory = [];

      // Auto-resize textarea
      messageInput.addEventListener('input', function() {
        this.style.height = 'auto';
        this.style.height = Math.min(this.scrollHeight, 150) + 'px';
      });

      function formatText(text) {
        text = text.replace(/\*\*(.*?)\*\*/g, "<strong>$1</strong>");
        text = text.replace(/\*(.*)/g, "<li>$1</li>");
        text = text.replace(/^## (.*)/gm, "<h1><strong>$1</strong></h1>");
        text = text.replace(/^```(.+?)```/gms, "<pre><code>$1</code></pre>");
        return text;
      }

      function createAIMessage(response) {
        const wrapper = document.createElement("div");
        wrapper.classList.add("ai-message-wrapper");

        const message = document.createElement("div");
        message.classList.add("ai-message");
        message.innerHTML = response;

        wrapper.appendChild(message);
        chatContainer.appendChild(wrapper);

        // Scroll to bottom
        setTimeout(() => {
          chatContainer.parentElement.scrollTop = chatContainer.parentElement.scrollHeight;
        }, 100);
      }

      function createUserMessage(text) {
        const wrapper = document.createElement("div");
        wrapper.classList.add("user-message-wrapper");

        const message = document.createElement("div");
        message.classList.add("user-message");
        message.textContent = text;

        wrapper.appendChild(message);
        chatContainer.appendChild(wrapper);

        // Hide welcome section after first message
        if (welcomeSection) {
          welcomeSection.style.display = 'none';
        }

        // Scroll to bottom
        setTimeout(() => {
          chatContainer.parentElement.scrollTop = chatContainer.parentElement.scrollHeight;
        }, 100);
      }

      function showTypingIndicator() {
        const wrapper = document.createElement("div");
        wrapper.classList.add("ai-message-wrapper");
        wrapper.id = "typingIndicator";

        const message = document.createElement("div");
        message.classList.add("ai-message");
        message.innerHTML = `
          <div class="typing-indicator">
            <div class="typing-dot"></div>
            <div class="typing-dot"></div>
            <div class="typing-dot"></div>
          </div>
        `;

        wrapper.appendChild(message);
        chatContainer.appendChild(wrapper);

        // Scroll to bottom
        setTimeout(() => {
          chatContainer.parentElement.scrollTop = chatContainer.parentElement.scrollHeight;
        }, 100);
      }

      function removeTypingIndicator() {
        const indicator = document.getElementById("typingIndicator");
        if (indicator) {
          indicator.remove();
        }
      }

      messageForm.addEventListener("submit", async (event) => {
        event.preventDefault();

        const message = messageInput.value.trim();

        if (message !== "") {
          createUserMessage(message);
          messageInput.value = "";
          messageInput.style.height = 'auto';

          const historyToSend = [...chatHistory];
          chatHistory.push({ role: "user", parts: [{ text: message }] });

          showTypingIndicator();

          try {
            const response = await fetch("/api/chat", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ message, history: historyToSend }),
            });

            const data = await response.json();
            chatHistory.push({ role: "model", parts: [{ text: data.response }] });

            removeTypingIndicator();
            const formattedText = formatText(data.response);
            createAIMessage(formattedText);
          } catch (error) {
            removeTypingIndicator();
            createAIMessage("Sorry, there was an error processing your request. Please try again.");
          }
        }
      });

      async function sendInitialMessage() {
        let userName = "<%= escape(username) %>";
        const initialMessage = "Hi! you are a useful ai assistant that will help the user accomplish his/her tasks. Greet the user, his/her name is \"" + userName + "\"";
        
        chatHistory.push({ role: "user", parts: [{ text: initialMessage }] });

        showTypingIndicator();

        try {
          const response = await fetch("/api/chat", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ message: initialMessage, history: [] }),
          });

          const data = await response.json();
          chatHistory.push({ role: "model", parts: [{ text: data.response }] });

          removeTypingIndicator();
          const formattedText = formatText(data.response);
          createAIMessage(formattedText);
        } catch (error) {
          removeTypingIndicator();
          createAIMessage("Welcome! I'm here to help you with anything you need.");
        }
      }

      window.onload = sendInitialMessage;

      // Allow Enter to send, Shift+Enter for new line
      messageInput.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && !e.shiftKey) {
          e.preventDefault();
          messageForm.dispatchEvent(new Event('submit'));
        }
      });
    </script>
  </body>
</html>